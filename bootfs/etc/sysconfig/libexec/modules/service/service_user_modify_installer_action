service_user_modify_installer_action(){
CONFIG_PATH=/etc/sysconfig/config
SMB_SHARES_CONF=${CONFIG_PATH}/smb/shares

SHARE_PATH=/home
replaceFile=/usr/bin/replaceFile

FolderName=`echo ${QUERY_STRING} | cut '-d&' -f2`
UserName=`echo ${QUERY_STRING} | cut '-d&' -f3`

old_write_list=`/usr/bin/awk -F= /write/'{print $2}' ${SMB_SHARES_CONF}/${FolderName}.inc|/usr/bin/sed 's/\ //g'`
$replaceFile "${SMB_SHARES_CONF}/${FolderName}.inc" "write list = ${old_write_list}" "write list = ${old_write_list}${UserName},"

old_invalid_users=`/usr/bin/awk -F= /invalid/'{print $2}' ${SMB_SHARES_CONF}/${FolderName}.inc|/usr/bin/sed 's/\ //g'`
new_invalid_users=`/usr/bin/awk -F= /invalid/'{print $2}' ${SMB_SHARES_CONF}/${FolderName}.inc|/usr/bin/sed 's/\ //g'|/bin/sed 's/',${UserName},'/,/g'|/bin/sed 's/'^${UserName},'//g'`
$replaceFile "${SMB_SHARES_CONF}/${FolderName}.inc" "invalid users = ${old_invalid_users}" "invalid users = ${new_invalid_users}"

ConfigFile=${SHARE_PATH}/${FolderName}/.ftpaccess

OLD_DenyUser=`/usr/bin/awk /DenyUser/'{print $2}' ${ConfigFile}|/usr/bin/sed 's/\ //g'`
OLD_DenyUser_Line=`/bin/cat ${ConfigFile}|/usr/bin/grep "DenyUser"`
NEW_DenyUser=`echo ${OLD_DenyUser}|/usr/bin/sed 's/',${UserName},'/,/g'|/bin/sed 's/'^${UserName},'//g'`
$replaceFile "${ConfigFile}" "${OLD_DenyUser_Line}" "DenyUser ${NEW_DenyUser}"

OLD_AllowUser=`/usr/bin/awk /AllowUser/'{print $2}' ${ConfigFile}|/usr/bin/sed 's/\ //g'`
OLD_AllowUser_Line=`/bin/cat ${ConfigFile}|/usr/bin/grep "AllowUser"`
$replaceFile "${ConfigFile}" "${OLD_AllowUser_Line}" "${OLD_AllowUser_Line}${UserName},"

service_ftp_stop
service_smb_stop
sleep 2
service_ftp_start
service_smb_start
}
