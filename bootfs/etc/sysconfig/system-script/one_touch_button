#!/bin/sh
PATH=/bin:/sbin:/usr/bin:/usr/sbin
export PATH

SOURCE_PATH=/home
PUBLIC_PATH=/home/PUBLIC

/bin/df|/usr/bin/awk '{print $NF}'|/usr/bin/grep "^/home$" >/dev/null 2>&1
[ $? -ne 0 ] && return;

DESTINATION_PATH=${PUBLIC_PATH}/"`date '+%Y_%m_%d_%H_%M_%S'`"
#BACKUP_PATH=`/usr/bin/find "${SOURCE_PATH}" -maxdepth 1 -type d|tr " " "^"`

BACKUP_PATH=`/bin/df|/usr/bin/awk '{print $NF}'|/usr/bin/grep "^/home"|\
             /usr/bin/grep -v "^/home$"|/usr/bin/grep -v "^/home/Disk_2$"`

[ "$BACKUP_PATH" == "" ] && return;
[ -d "$DESTINATION_PATH" ] || /bin/mkdir -p ${DESTINATION_PATH}

for i in $BACKUP_PATH; do
 /bin/cp -af ${i} ${DESTINATION_PATH}/
done

echo "clear" > /proc/mp_otb_button
